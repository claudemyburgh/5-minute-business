{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "baseUrl": "./",
        "files": [
            "node_modules/gsap/types/index.d.ts"
        ],
        "types": [
            "react",
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "./resources/ts/*"
            ],

        }
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.tsx",
        "resources/ts/**/*.d.ts"
    ]
}
